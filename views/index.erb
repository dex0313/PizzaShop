<h2>Welcome to PizzaShop</h2>

<div class="row">

    <% @products.each do |p| %>
    <div class="col-md-3">
        <div>
            <%= p.title %>
        </div>

        <div>
            <img src="<%= p.path_to_image %>" width="100px" height="100px">
        </div>

        <div>
            <%= p.description %>
        </div>

        <div>
            Size: <%= p.size %> cm
        </div>

        <div>
            Price: <%= p.price %> rub
        </div>

       
    </div>
    
    <% end %>
</div>

<br />
<br />
<button class="btn-primary" onclick="something()">Click me</button>
